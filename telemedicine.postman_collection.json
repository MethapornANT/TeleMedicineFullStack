{
    "info": {
      "name": "Telemedicine",
      "_postman_id": "b3d6a3f7-1aaa-4c5b-9a9e-telemed",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
      { "key": "baseUrl", "value": "http://localhost:4005" },
      { "key": "token", "value": "" }
    ],
    "item": [
      { "name": "Health", "request": { "method": "GET", "url": "{{baseUrl}}/health" } },
      {
        "name": "Auth",
        "item": [
          {
            "name": "Register",
            "request": {
              "method": "POST",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "url": "{{baseUrl}}/auth/register",
              "body": {
                "mode": "raw",
                "raw": "{\"role\":\"doctor\",\"full_name\":\"Dr. A\",\"email\":\"a@example.com\",\"password\":\"1234\",\"specialties\":[\"SPxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx\"]}"
              }
            }
          },
          {
            "name": "Login",
            "request": {
              "method": "POST",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "url": "{{baseUrl}}/auth/login",
              "body": { "mode": "raw", "raw": "{\"email\":\"a@example.com\",\"password\":\"1234\"}" }
            }
          }
        ]
      },
      {
        "name": "Users",
        "item": [
          {
            "name": "Me",
            "request": {
              "method": "GET",
              "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
              "url": "{{baseUrl}}/users/me"
            }
          },
          {
            "name": "Update Me",
            "request": {
              "method": "PUT",
              "header": [
                { "key": "Authorization", "value": "Bearer {{token}}" },
                { "key": "Content-Type", "value": "application/json" }
              ],
              "url": "{{baseUrl}}/users/me",
              "body": { "mode": "raw", "raw": "{\"full_name\":\"Dr. A+\",\"phone\":\"0899999999\"}" }
            }
          }
        ]
      },
      {
        "name": "Doctors",
        "item": [
          { "name": "Search", "request": { "method": "GET", "url": "{{baseUrl}}/doctors?specialty=cardio" } },
          {
            "name": "Create Slot (me)",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Authorization", "value": "Bearer {{token}}" },
                { "key": "Content-Type", "value": "application/json" }
              ],
              "url": "{{baseUrl}}/doctors/{{doctorId}}/slots",
              "body": { "mode": "raw", "raw": "{\"start_time\":\"2025-09-01\",\"end_time\":\"2025-09-10\"}" }
            }
          },
          {
            "name": "List Slots",
            "request": {
              "method": "GET",
              "url": "{{baseUrl}}/doctors/{{doctorId}}/slots?from=2025-09-01&to=2025-09-10"
            }
          }
        ]
      },
      {
        "name": "Appointments",
        "item": [
          {
            "name": "Book",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Authorization", "value": "Bearer {{token}}" },
                { "key": "Content-Type", "value": "application/json" }
              ],
              "url": "{{baseUrl}}/appointments",
              "body": { "mode": "raw", "raw": "{\"slot_id\":\"Sxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx\",\"chosen_date\":\"2025-09-02\"}" }
            }
          },
          {
            "name": "Mine (auto by role)",
            "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": "{{baseUrl}}/appointments/me" }
          },
          {
            "name": "Update Status (doctor)",
            "request": {
              "method": "PATCH",
              "header": [
                { "key": "Authorization", "value": "Bearer {{token}}" },
                { "key": "Content-Type", "value": "application/json" }
              ],
              "url": "{{baseUrl}}/appointments/{{appointmentId}}/status",
              "body": { "mode": "raw", "raw": "{\"status\":\"confirmed\"}" }
            }
          }
        ]
      },
      {
        "name": "Reports (Optional)",
        "item": [
          {
            "name": "My daily summary",
            "request": {
              "method": "GET",
              "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
              "url": "{{baseUrl}}/reports/appointments/me?date=2025-09-02"
            }
          }
        ]
      },
      { "name": "Specialties", "request": { "method": "GET", "url": "{{baseUrl}}/specialties" } }
    ]
  }
  